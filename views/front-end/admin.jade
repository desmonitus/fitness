extends layout
- var role = #{role}
block contentPage
    script(type="text/javascript", src="/scripts/front-end/view.admin.js")
    link(rel='stylesheet', href='/css/front-end/admin.css')
    .container-fluid(style="padding:15px;")
        .main-box
            .row
                .col-xs-12.col-sm-3
                    .panel.panel-default
                        .panel-body.leftBox
                            .row
                                .col-xs-12.text-center
                                    label(style="font-size:18px;margin-top:10px;font-weight: bold;") #{title}
                            - if (role=="0")
                                .row
                                    .col-xs-12
                                        .vline
                                .row
                                    .col-xs-12.text-left.selectMenu(data=0)
                                        .menuTab
                                            label(style="font-size:16px;")
                                                span.glyphicon.glyphicon-user(style="margin-left:10px;")  กำหนดองค์กร
                            .row
                                .col-xs-12
                                    .vline
                            .row
                                .col-xs-12.text-left.selectMenu(data=1)
                                    .menuTab.active
                                        label(style="font-size:16px;")
                                            span.glyphicon.glyphicon-user(style="margin-left:10px;")  กำหนดผู้ใช้งานระบบ
                .col-xs-12.col-sm-9
                    .loader
                    .panel.panel-default
                        .panel-body.rightBox
                            - if (role=="0")
                                .orgBox.hide
                                    .panel.panel-default
                                        .panel-heading
                                            .row
                                                .col-xs-6.col-sm-6.col-md-6.col-lg-6
                                                    h4 ข้อมูลองค์กร
                                                .col-xs-6.col-sm-6.col-md-6.col-lg-6.text-right
                                                    img#addNewOrg(src="/images/icon/add.gif")
                                        .panel-body.setBodyScroll
                                            table-responsive
                                                table.table.table-bordered
                                                    thead
                                                        th.text-center.col-sm-4 รหัสตัวย่อองค์กร
                                                        th.text-center.col-sm-5 ชื่อองค์กร
                                                        th.text-center.col-sm-2 สถานะผู้ใช้งาน
                                                        th.text-center.col-sm-1
                                                .frame
                                                    table.table
                                                        tbody.orgInfo
                            .userBox
                                .panel.panel-default
                                    .panel-heading
                                        .row
                                            .col-xs-6.col-sm-6.col-md-6.col-lg-6
                                                h4 ข้อมูลผู้ใช้งานระบบ
                                            .col-xs-6.col-sm-6.col-md-6.col-lg-6.text-right
                                                img#addNewMember(src="/images/icon/add.gif")
                                    .panel-body.setBodyScroll
                                        table-responsive
                                            table.table.table-bordered
                                                thead
                                                    th.text-center.col-sm-2 Username
                                                    th.text-center.col-sm-3 ชื่อ-สกุล
                                                    th.text-center.col-sm-2 ตำแหน่ง
                                                    th.text-center.col-sm-2 สิทธิ์การใช้งาน
                                                    th.text-center.col-sm-2 สถานะผู้ใช้งาน
                                                    th.text-center.col-sm-1
                                            .frame
                                                table.table
                                                    tbody.memberInfo
                            .workTypeBox.hide
                                .panel.panel-default
                                    .panel-heading
                                        .row
                                            .col-xs-6.col-sm-6.col-md-6.col-lg-6
                                                h4 ข้อมูลประเภทงาน
                                            .col-xs-6.col-sm-6.col-md-6.col-lg-6.text-right
                                                img#addNewWorkType(src="/images/icon/add.gif")
                                    .panel-body.setBodyScroll
                                        table-responsive
                                            table.table.table-bordered
                                                thead
                                                    th.text-center.col-sm-4 รหัสตัวย่อประเภทงาน
                                                    th.text-center.col-sm-5 ชื่อประเภทงาน
                                                    th.text-center.col-sm-2 สถานะผู้ใช้งาน
                                                    th.text-center.col-sm-1
                                            .frame
                                                table.table
                                                    tbody.workTypeInfo
    .addNewMemberModel.modal.fade(tabindex='-1', role='dialog')
