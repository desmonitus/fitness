                        .row
                            .col-xs-12.col-sm-2.text-right
                                label(for='firstNameNew') ชื่อ - สกุล
                            .col-xs-12.col-sm-5
                                .form-group
                                    .form-group
                                        input#firstNameNew.form-control(type='text' , placeholder='ชื่อ')
                            .col-xs-12.col-sm-5
                                .form-group
                                    .form-group
                                        input#lastNameNew.form-control(type='text' , placeholder='สกุล')
                        .row
                            .col-xs-12.col-sm-2.text-right
                                label(for='birthdayNew') วันเกิด
                            .col-xs-12.col-sm-10
                                .form-group
                                    input#birthdayNew.form-control(type='text', placeholder='วันเกิด')
                        .row
                            .col-xs-12.col-sm-2.text-right
                                label(for='emailNew') ติดต่อ
                            .col-xs-12.col-sm-5
                                .form-group
                                    input#emailNew.form-control(type='text' , placeholder='อีเมล')
                            .col-xs-12.col-sm-5
                                .form-group
                                    input#phoneNew.form-control(type='text' , placeholder='เบอร์โทรศัพท์')
                        .row
                            .col-xs-12.col-sm-2.text-right
                                label(for='postionNew') ตำแหน่ง
                            .col-xs-12.col-sm-10
                                .form-group
                                    input#postionNew.form-control(type='text' , placeholder='ตำแหน่ง')
                        .row
                            .col-xs-12.col-sm-2.text-right
                                label(for='roleNew') สิทธิ์ผู้ใช้
                            .col-xs-12.col-sm-10
                                .form-group
                                    #roleNew
                        .row
                            .col-xs-12.col-sm-2.text-right
                                label(for='passwordNew') รหัสผ่าน
                                font(color="red") *
                            .col-xs-12.col-sm-5
                                .form-group
                                    input#passwordNew.form-control(type='password' , placeholder='รหัสผ่าน')
                            .col-xs-12.col-sm-5
                                .form-group
                                    input#passwordConfirmNew.form-control(type='password' , placeholder='ยืนยันรหัสผ่าน')
                .modal-footer
                    button.btn.btn-default(type='button', data-dismiss='modal') ปิด
                    button.btn.btn-primary.saveUserNew(type='button') บันทึก
